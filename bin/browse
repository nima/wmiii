#!/bin/bash

: ${WMII_ROOT:=${HOME}/.wmii}
. ${WMII_ROOT?}/base.conf

function webapp() {
    local -i e=0

    local -A bidz=(
        [sf]=$(which surf)
        [gc]=$(which chromium || which google-chrome || which chrome)
        [ff]=$(which firefox)
    )

    local -i appmode=0
    local -i incognito=0

    local id=default
    local bid=gc
    local proxy=${all_proxy-${http_proxy}}

    OPTERR=1 #. Default
    while getopts  "adzi:b:p:" flag; do
        case ${flag} in
            a) appmode=1         ;;
            d) proxy=""          ;;
            z) incognito=1       ;;
            i) id="${OPTARG}"    ;;
            b) bid="${OPTARG}"   ;;
            p) proxy="${OPTARG}" ;;
            *) ((e++))           ;;
        esac
    done
    shift $((OPTIND-1))
    uri="${*:-http://randomwebsite.com/cgi-bin/random.pl}"

    local opts
    local browser=${bidz[${bid}]}
    case ${bid} in
        sf)
            if [ ${#uri} -gt 0 ]; then
                #wmiir setsid
                ${browser} "${uri}"
            else
                #wmiir setsid
                ${browser}
            fi
        ;;
        gc)
            opts+=" --user-data-dir=${WMII_CACHE}/${bid}-${id}"
            opts+=" --new-window"
            [ ${incognito} -eq 0 ] || opts+=" --incognito"
            [ ${#proxy} -eq 0 ]    || opts+=" --proxy-server='${proxy}'"
            if [ ${appmode} -eq 1 ]; then
                opts+=" --kiosk --app=${uri}"
            fi
            #wmiir setsid 
            ${browser} ${opts} "${uri}"
        ;;
        ff)
            if [ -n "${uri}" ]; then
                #wmiir setsid
                ${browser} -P ${id} --new-instance --no-remote "${uri}"
            else
                #wmiir setsid
                ${browser} -P ${id} --new-instance --no-remote
            fi
        ;;
        *)
            logger ERR "Unsupported browser \`${browser}'"
        ;;
    esac
}

e=9
if [ "${1:0:1}" == '@' ]; then
    cmd="$(
        awk '$1!~/ *#/&&$2~/^'${1:1:${#1}}'$/{i=4; while(i<=NF){printf("%s ",$i);i++}}'\
            ${WMII_ROOT?}/tags.conf
    )"
    exec $cmd
elif [ "${1:0:1}" == '!' ]; then
    cmd="$(
        awk '$1~/^'${1:1:${#1}}'$/{i=4; while(i<=NF){printf("%s ",$i);i++}}'\
            ${WMII_ROOT?}/tags.conf
    )"
    exec $cmd
else
    webapp "$@"
    e=$?
fi

exit $e
